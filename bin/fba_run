#!/usr/bin/env python
"""
Main fiber assignment entry point
"""

from fiberassign.scripts.run import (parse_survey, run_survey_full,
                                     run_survey_bytile)


def main():
    args = parse_survey()
    if args.by_tile:
        run_survey_bytile(args)
    else:
        run_survey_full(args)
    return


if __name__ == "__main__":
    main()
